@model IEnumerable<WondyRestaurant.Models.Coupons>
@{
    ViewData["Title"] = "Index2";
}
<br />
<h2> List Of Coupons </h2>
<br />

@Html.Partial("_CreateButtonPartial")

<div class="form-border">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(m => m.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Discount)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.MinimumAmount)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.IsActive)
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(m => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Discount)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.MinimumAmount)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.IsActive)
                    </td>
                    <td>
                        <a class="btn btn-primary" href="@Url.Action("Edit/"+item.Id)">
                            <i class="fas fa-edit"></i>
                        </a>                        

                        <a class="btn btn-danger" href="@Url.Action("Delete/"+ item.Id)">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>



