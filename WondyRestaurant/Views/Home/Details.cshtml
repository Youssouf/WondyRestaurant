@model WondyRestaurant.Models.ShoppingCart
@{
    ViewData["Title"] = "Details";
}

<h2> Menu Item Details</h2>
<br />

<form method="post">
    
    <div class="form-border row">
       
        <div class="col-8">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="MenuItem.Name" class="custom-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="MenuItem.Name" class="form-control" readonly />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="MenuItem.Description" class="custom-label"></label>
                </div>
                <div class="col-8">
                    <textarea asp-for="MenuItem.Description" class="form-control" style="height: 150px;" readonly></textarea>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="MenuItem.Price" class="custom-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="MenuItem.Price" class="form-control" readonly />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="MenuItem.Spicyness" class="custom-label"></label>
                </div>
                <div class="col-8">
                    <select asp-for="MenuItem.Price" asp-items="Html.GetEnumSelectList<MenuItem.EScipy>()" class="form-control" disabled></select>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="MenuItem.Category" class="custom-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="MenuItem.Category.Name" class="form-control" readonly />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="MenuItem.SubCategory" class="custom-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="MenuItem.SubCategory.Name" class="form-control" readonly />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Count" class="custom-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Count" class="form-control" />
                   <span asp-validation-for="Count" class="text-danger"></span>
                </div>
               
            </div>

            <div class="form-group row">
                <div class="col-4">
                 
                </div>
                <div class="col-8">
                    <button type ="submit" value="Add To Cart" class=" form-control btn-primary">Add To Cart</button>
                </div>
            </div>

        </div>      
                  
        <div class="col-1"></div>
        <div class="col-3">

            <img src="@Model.MenuItem.Image" width="100%" style="border-radius: 5px; border: 1px solid #bbb9b9;" />

        </div>
        <div class=" form-group row col-12">
            <a asp-action="Index" class="btn btn-success"> Bact To List</a>
        </div>



    </div>


    <input type="hidden" asp-for="MenuItemId" />


</form>

